doctype html
html
  head
    title Global News
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body#backpic
    nav.navbar.navbar-inverse
      .container#space
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Global News
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            if user
              li
                a(href='/articles/add') Add Article
          ul.nav.navbar-nav.navbar-right
            if user
              li
                form.form-inline.my-2.my-sm-0#search
                  input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')#search
                  button.btn.btn-danger.my-2.my-sm-0(type='submit') Search
              li 
                a(href='/users/logout') Logout
            else
              li
                form.form-inline.my-2.my-sm-0#search
                  input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')#search
                  button.btn.btn-danger.my-2.my-sm-0(type='submit') Search
              li
                a(href='/users/register') Register
              li
                a(href='/users/login') Login
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      
      footer
        p Copyright &copy;&nbsp;&nbsp;&nbsp;&nbsp;2020&nbsp;&nbsp;&nbsp;&nbsp;Powered by LK Media
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
